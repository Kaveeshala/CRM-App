@model CRM.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient-primary text-black text-center rounded-top-4">
                    <h3>Login</h3>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100 shadow-sm">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>
                    }
                </div>
                <div class="card-footer text-center bg-light">
                    <p class="mb-2">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-outline-secondary rounded-pill shadow-sm">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
